<!-- Validation failure messages -->

<% if @sport.errors.any? %>
  <% @sport.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Sport</h3>
      </div>
      <div class="panel-body">
        <form action="/create_sport" class="form-horizontal">
          <!-- Label and input for sport -->
          <div class="form-group">
            <label for="sport" class="col-sm-2 control-label">
              Sport
            </label>
            <div class="col-sm-10">
              <input type="text" id="sport" name="sport" placeholder="Sport" class="form-control" value="<%= @sport.sport %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Sport" class="btn btn-success">
              or
              <a href="/sports">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
