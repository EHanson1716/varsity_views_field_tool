<!-- Admin access only -->
<% if current_photographer.try(:admin_status?) %>

<!-- Validation failure messages -->

<% if @level.errors.any? %>
  <% @level.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Level #<%= @level.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_level/<%= @level.id %>" class="form-horizontal">
      <!-- Label and input for level -->
      <div class="form-group">
        <label for="level" class="col-sm-2 control-label">
          Level
        </label>
        <div class="col-sm-10">
          <input type="text" id="level" name="level" placeholder="Level" class="form-control" value="<%= @level.level %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Level" class="btn btn-warning">
          or
          <a href="/levels/<%= @level.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

