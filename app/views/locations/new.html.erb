<!-- Validation failure messages -->

<% if @location.errors.any? %>
  <% @location.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Location</h3>
      </div>
      <div class="panel-body">
        <form action="/create_location" class="form-horizontal">
          <!-- Label and input for short_name -->
          <div class="form-group">
            <label for="short_name" class="col-sm-2 control-label">
              Short name
            </label>
            <div class="col-sm-10">
              <input type="text" id="short_name" name="short_name" placeholder="Short name" class="form-control" value="<%= @location.short_name %>">
            </div>
          </div>

          <!-- Label and input for long_name -->
          <div class="form-group">
            <label for="long_name" class="col-sm-2 control-label">
              Long name
            </label>
            <div class="col-sm-10">
              <input type="text" id="long_name" name="long_name" placeholder="Long name" class="form-control" value="<%= @location.long_name %>">
            </div>
          </div>

          <!-- Label and input for address -->
          <div class="form-group">
            <label for="address" class="col-sm-2 control-label">
              Address
            </label>
            <div class="col-sm-10">
              <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @location.address %>">
            </div>
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="city" class="col-sm-2 control-label">
              City
            </label>
            <div class="col-sm-10">
              <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @location.city %>">
            </div>
          </div>

          <!-- Label and input for state -->
          <div class="form-group">
            <label for="state" class="col-sm-2 control-label">
              State
            </label>
            <div class="col-sm-10">
              <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @location.state %>">
            </div>
          </div>

          <!-- Label and input for main_phone -->
          <div class="form-group">
            <label for="main_phone" class="col-sm-2 control-label">
              Main phone
            </label>
            <div class="col-sm-10">
              <input type="text" id="main_phone" name="main_phone" placeholder="Main phone" class="form-control" value="<%= @location.main_phone %>">
            </div>
          </div>

          <!-- Label and input for rainout_phone -->
          <div class="form-group">
            <label for="rainout_phone" class="col-sm-2 control-label">
              Rainout phone
            </label>
            <div class="col-sm-10">
              <input type="text" id="rainout_phone" name="rainout_phone" placeholder="Rainout phone" class="form-control" value="<%= @location.rainout_phone %>">
            </div>
          </div>

          <!-- Label and input for website -->
          <div class="form-group">
            <label for="website" class="col-sm-2 control-label">
              Website
            </label>
            <div class="col-sm-10">
              <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @location.website %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Location" class="btn btn-success">
              or
              <a href="/locations">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
