<!-- Simple full-width example-->

<div class="page-header">
  <h1>Location #<%= @location.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Short name</dt>
      <dd><%= @location.short_name %></dd>

      <dt>Long name</dt>
      <dd><%= @location.long_name %></dd>

      <dt>Address</dt>
      <dd><%= @location.address %></dd>

      <dt>City</dt>
      <dd><%= @location.city %></dd>

      <dt>State</dt>
      <dd><%= @location.state %></dd>

      <dt>Main phone</dt>
      <dd><%= @location.main_phone %></dd>

      <dt>Rainout phone</dt>
      <dd><%= @location.rainout_phone %></dd>

      <dt>Website</dt>
      <dd><%= @location.website %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/locations" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/locations/<%= @location.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_location/<%= @location.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

