  </h1>
</div>

<!-- Simple table layout example -->

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Short name</th>
          <th>Long name</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Main phone</th>
          <th>Rainout phone</th>
          <th>Website</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= location.short_name %></td>
            <td><%= location.long_name %></td>
            <td><%= location.address %></td>
            <td><%= location.city %></td>
            <td><%= location.state %></td>
            <td><%= location.main_phone %></td>
            <td><%= location.rainout_phone %></td>
            <td><%= location.website %></td>
