<!-- Validation failure messages -->

<% if @sport.errors.any? %>
  <% @sport.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Sport #<%= @sport.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_sport/<%= @sport.id %>" class="form-horizontal">
      <!-- Label and input for sport -->
      <div class="form-group">
        <label for="sport" class="col-sm-2 control-label">
          Sport
        </label>
        <div class="col-sm-10">
          <input type="text" id="sport" name="sport" placeholder="Sport" class="form-control" value="<%= @sport.sport %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Sport" class="btn btn-warning">
          or
          <a href="/sports/<%= @sport.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

